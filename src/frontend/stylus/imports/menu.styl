
.menu-row
    justify-content right 
    width 100vw
    margin 0
    height 100vh
    position absolute
    display flex
    top 0
    transition opacity .4s ease-in-out   
    opacity 0

.menu-row-enabled
    right 0
    opacity 1


.menu
    background clr_alt-background
    padding 0
    margin-top 9vh

.links
    display flex
    flex-direction column
    justify-content center

.links > a 
    text-align right
    margin 10px 0
    padding-right 3vw
    font-size 18px
    transition all .4s ease-in-out        

.links > a:hover
    color: clr_alt-background
    background clr_yellow
    text-decoration none
    padding 20px 3vw 20px 0

.menu__link
    color clr_yellow