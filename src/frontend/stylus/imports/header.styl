header
    display flex
    justify-content right
    flex-wrap wrap
    z-index 2

.row-header
    margin 0
    width 100vw

.header
    padding 0 3vw 0 0 
    display flex
    justify-content space-between
    background clr_alt-background
    height 10vh
    max-height 55px

.logo-place
    display flex
    align-items center
    width 10vw
    height 100%
    min-width 77px


.logo-place__image
    width 100%
    max-width 130px


.func-buttons
    display flex
    justify-content center
    align-items center


.search-form
    max-width 300px
    min-width 140px
    width 20vw
    //transform translate(6vh)
    display flex
    justify-content flex-end 
    z-index 2

.search-form__input
    height 6vh
    max-height 40px
    border none
    border-radius 40px
    background clr_dark-background
    padding 0
    opacity 0
    font-size fnt-sz_verySmall
    color clr_grey
    width: 0%
    transition all .6s ease-in-out


.search-form__input-fw
    width 100%
    opacity 1
    padding 10px

.button-search    
    margin 0 5vw 0 0
    background url('svg/glass.svg')

.button-menu
    background url('svg/menu.svg')

.func-buttons > button
    background-repeat no-repeat
    background-position center
    background-size 60%
    height 6vh
    max-height 40px
    width 6vh
    max-width 40px
    padding 3px
    border none
    border-radius 20px
    z-index 2
    transition background .4s ease-in-out


.func-buttons > button:hover 
    background-color clr_dark-background

.func-buttons > button:active 
     transform scale(0.9)
