
.slide
    margin 0 
    box-sizing border-box
    height 90vh
    max-height 90vh
    max-width 100vw
    display flex

.slide-right
    justify-content right

.slide-left
    justify-content left 

.slide__info-container
    padding 20px 0 20px 50px
    box-sizing border-box
    height 90vh
    background url('svg/thermometer.svg')
    background-repeat no-repeat
    background-position 40vw 40vh

.slide__caption
    color clr_yellow
    font-size fnt-sz_big
    font-weight 600
    margin 0 0 10px 0

.slide__text
    color clr_grey
    font-size fnt-sz_middle
    margin 0

.slide__big-txt
    color clr_yellow
    font-size fnt-sz_over-big
    margin 30vh 0 0 0

#thermometer-box
    position absolute
    left 40vw
    top 40vh 

.slide__img-container
    box-sizing border-box
    height 90vh
    //background-image url('img/bg-banana-clip/slide1.jpg')
    background-size 120%
    background-position-x -50px
    background-position-y -50px
    background-repeat no-repeat
    padding 0
    display flex
    justify-content right 
     
.bg-image
    border none
    height 100%

.slide-underline
    height 1px
    background #c4c4c4
    opacity 0.6